service beeroclock
{
        cps = 100 30
        disable = no
        instances = 60
        log_on_failure = HOST
        log_on_success = HOST
        log_type = FILE /var/log/beeroclock.log
        port = 18080
        protocol = tcp
        server = /var/lib/beeroclock/service.sh
        socket_type = stream
        user = root
        wait = no
}
